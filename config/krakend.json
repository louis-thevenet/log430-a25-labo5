{
  "version": 3,
  "name": "Store Manager API Gateway",
  "timeout": "5s",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8080,
  "endpoints": [
      {
      "endpoint": "/store-api/orders",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/orders",
          "host": ["http://store_manager:5000"]
        }
      ],
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 10,
          "every": "1m"
        }
      }
  },
  {
    "endpoint": "/store-api/orders",
    "method": "PUT",
    "backend": [
      {
        "url_pattern": "/orders",
        "host": ["http://store_manager:5000"]
      }
    ]
  },
    {
      "endpoint": "/payments-api/payments",
      "method": "POST", 
      "backend": [
        {
          "url_pattern": "/payments",
          "host": ["http://payments_api:5009"],
          "timeout": "5s"
        }
      ]
    },
    {
      "endpoint": "/payments-api/payments/{payment_id}",
      "method": "POST", 
      "backend": [
        {
          "url_pattern": "/payments/process/{payment_id}",
          "host": ["http://payments_api:5009"],
          "timeout": "5s"
        }
      ]
    }
  ]
}
